{
    "extends": "tslint:recommended",
    "formatter": "json",
    "rules": {
        "quotemark": [
            true,
            "double"
        ],
        "no-var-requires": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "max-line-length": [true, 160],
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        "object-literal-sort-keys": false
    }
}